<!DOCTYPE html>
<html>
<head>
    <title>Registration</title>
    <style>
        body {
            background-color: #b0c3c3;
                    /*#c0f4d3;*/
            /*font-family: Arial, sans-serif;*/
            font-size: 16px;
            color: #333;
        }
        h1 {
            color: #3e6a5c;
            font-size: 36px;
            text-align: center;
            margin-top: 100px;
        }
        .registration-form {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.4);
            background-color: #fff;
        }

        .registration-form h2 {
            font-size: 30px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 15px;
            color: #3e6a5c;
        }

        .registration-form button[type="submit"] {
            width: 100%;
            display: block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #3e6a5c;
            color: #E8F0F3;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .registration-form label {
            display: block;
            margin-bottom: 10px;
            color: #333;
            font-size: 18px;
        }

        .registration-form button:hover {
            background-color: #3e6a5c;
        }

        .registration-form input:focus {
            outline: none;
            box-shadow: 0 0 3px #3cb371;
        }
        .registration-form input[type="text"],
        .registration-form input[type="email"],
        .registration-form input[type="tel"],
        .registration-form input[type="password"]{
            background-color: #E8F0F3;
            display: block;
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            margin-bottom: 20px;
            box-sizing: border-box;
        }

        .user-list {
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            max-width: 600px;
        }
        .user-list h2 {
            color: green;
            font-size: 28px;
            margin-bottom: 20px;
        }
        .user-list label {
            display: block;
            margin-bottom: 10px;
            color: #333;
            font-size: 18px;
        }
        .user-list input[type="text"] {
            display: block;
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            margin-bottom: 20px;
            box-sizing: border-box;
        }
        .user-list table {
            width: 100%;
            border-collapse: collapse;
            font-size: 16px;
        }
        .user-list th,
        .user-list td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }
        .user-list th {
            background-color: #eee;
        }
        .search-bar label {
            display: block;
            margin-bottom: 10px;
            color: #333;
            font-size: 18px;
        }
        .search-bar input[type="text"] {
            display: block;
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
{{#message}}
    {{message}}
{{/message}}
<div class="registration-form">
    <h2>Register Here</h2>
    <form method="post" action="/registration">
        <label for="username">Name:</label>
        <input type="text" id="name" name="username" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" required>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>

        <input type="hidden" name="_csrf" value="{{#_csrf}}{{_csrf.token}}{{/_csrf}}">

        <button type="submit">Submit</button>
    </form>

<!--    <h2>Find user by name</h2>-->
<!--    <form method="post" action="filter">-->
<!--        <input type="text" name="filter">-->
<!--        <input type="hidden" name="_csrf" value="{{#_csrf}}{{_csrf.token}}{{/_csrf}}">-->

<!--        <button type="submit">Search</button>-->
<!--    </form>-->
    {{#users}}
        <div>
            <b>{{id}}</b>
            <i>{{name}}</i>
            <i>{{password}}</i>
        </div>

    {{/users}}
</div>
</body>
</html>
